{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"globalEnv": [
		"NODE_ENV",
		"NEXT_RUNTIME",
		"TASK_ID",
		"LANGUAGE",
		"EXERCISE",
		"OPENROUTER_API_KEY",
		"OPENROUTER_MODEL_ID",
		"PROMPT_PATH",
		"WORKSPACE_PATH",
		"BENCHMARKS_DB_PATH"
	],
	"tasks": {
		"format": {},
		"lint": {},
		"check-types": {},
		"test": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		}
	}
}
