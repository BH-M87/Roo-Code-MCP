// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug CLI",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/cli/dist/index.js",
			"args": ["new", "Write a hello world function", "--mode", "code", "--verbose"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/cli/dist/**/*.js"],
			"preLaunchTask": "cli-build",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "development"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/cli/**", "!**/node_modules/**"],
			"presentation": {
				"hidden": false,
				"group": "cli",
				"order": 1
			}
		},
		{
			"name": "Debug CLI Server",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/cli/dist/index.js",
			"args": ["server", "--port", "3000"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/cli/dist/**/*.js"],
			"preLaunchTask": "cli-build",
			"cwd": "${workspaceFolder}",
			"env": {
				"NODE_ENV": "development"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/cli/**", "!**/node_modules/**"],
			"presentation": {
				"hidden": false,
				"group": "cli",
				"order": 2
			}
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}"],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}",
			"env": {
				"NODE_ENV": "development",
				"VSCODE_DEBUG_MODE": "true"
			},
			"resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
			"presentation": {
				"hidden": false,
				"group": "tasks",
				"order": 3
			}
		}
	]
}
